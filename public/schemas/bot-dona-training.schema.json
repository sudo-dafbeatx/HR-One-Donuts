{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Bot Dona Training Data",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "question": {
        "type": "string",
        "minLength": 5,
        "description": "The question user might ask"
      },
      "answer": {
        "type": "string",
        "minLength": 5,
        "description": "The answer bot should give"
      },
      "tags": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "Relevant keywords for better matching"
      },
      "category": {
        "type": "string",
        "enum": ["general", "ordering", "products", "delivery", "payment", "other"],
        "description": "Data category"
      }
    },
    "required": ["question", "answer"],
    "additionalProperties": false
  }
}
